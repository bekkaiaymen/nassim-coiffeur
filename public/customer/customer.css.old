* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-yellow: #FDB022;
    --primary-dark: #1A1A2E;
    --secondary-dark: #16213E;
    --text-light: #FFFFFF;
    --text-gray: #A0A0A0;
    --success-green: #4CAF50;
    --border-radius: 16px;
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);
    --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.15);
    --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.2);
}

body {
    font-family: 'Cairo', sans-serif;
    background: var(--primary-dark);
    min-height: 100vh;
    direction: rtl;
    color: var(--text-light);
}

.container {
    max-width: 480px;
    margin: 0 auto;
    padding: 0 16px;
}

/* Navbar */
.navbar {
    background: var(--secondary-dark);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 12px 0;
}

.nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 20px;
    font-weight: 700;
    color: var(--primary-yellow);
}

.logo svg {
    width: 32px;
    height: 32px;
}

.logo svg circle {
    fill: var(--primary-yellow);
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 12px;
}

.customer-name {
    font-weight: 500;
    color: var(--text-light);
    font-size: 14px;
}

.btn-primary, .btn-secondary {
    padding: 10px 24px;
    border: none;
    border-radius: 12px;
    font-family: 'Cairo', sans-serif;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-primary {
    background: var(--primary-yellow);
    color: var(--primary-dark);
    display: inline-flex;
    align-items: center;
    gap: 8px;
    box-shadow: 0 4px 12px rgba(253, 176, 34, 0.3);
}

.btn-primary:hover {
    background: #FFC745;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(253, 176, 34, 0.4);
}

.btn-primary:active {
    transform: translateY(0);
}

.btn-secondary {
    background: transparent;
    color: var(--primary-yellow);
    border: 1.5px solid var(--primary-yellow);
    font-size: 13px;
    padding: 8px 16px;
}

.btn-secondary:hover {
    background: rgba(253, 176, 34, 0.1);
}

/* Main Content */
.main-content {
    padding: 20px 0;
    min-height: calc(100vh - 80px);
}

/* Profile Header */
.profile-header {
    background: var(--secondary-dark);
    border-radius: var(--border-radius);
    padding: 24px;
    margin-bottom: 20px;
    box-shadow: var(--shadow-md);
    display: flex;
    align-items: center;
    gap: 16px;
}

.profile-avatar {
    flex-shrink: 0;
}

.avatar-circle {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--primary-yellow) 0%, #FFD700 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-dark);
    box-shadow: 0 4px 16px rgba(253, 176, 34, 0.3);
}

.avatar-circle svg {
    width: 32px;
    height: 32px;
}

.profile-info {
    flex: 1;
}

.profile-info h1 {
    font-size: 20px;
    color: var(--text-light);
    margin-bottom: 4px;
    font-weight: 600;
}

.profile-info p {
    color: var(--text-gray);
    margin: 2px 0;
    font-size: 14px;
}

.member-since {
    font-size: 12px;
    color: var(--text-gray);
    margin-top: 4px;
}

.loyalty-card {
    background: var(--primary-yellow);
    border-radius: 12px;
    padding: 16px;
    color: var(--primary-dark);
    margin-top: 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 4px 12px rgba(253, 176, 34, 0.3);
}

.loyalty-icon {
    font-size: 32px;
}

.loyalty-info {
    flex: 1;
    text-align: center;
}

.loyalty-points {
    font-size: 28px;
    font-weight: 700;
    line-height: 1;
}

.loyalty-label {
    font-size: 12px;
    font-weight: 500;
    margin-top: 4px;
}

.loyalty-value {
    font-size: 14px;
    font-weight: 600;
    opacity: 0.8;
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-bottom: 20px;
}

.stat-card {
    background: var(--secondary-dark);
    border-radius: var(--border-radius);
    padding: 20px 16px;
    box-shadow: var(--shadow-sm);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    transition: transform 0.2s;
    text-align: center;
}

.stat-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
}

.stat-icon {
    font-size: 32px;
    opacity: 0.9;
}

.stat-content {
    flex: 1;
    width: 100%;
}

.stat-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-light);
    margin-bottom: 4px;
}

.stat-label {
    font-size: 12px;
    color: var(--text-gray);
    font-weight: 500;
}

/* Tabs */
.tabs {
    background: var(--secondary-dark);
    border-radius: 12px;
    padding: 6px;
    margin-bottom: 16px;
    display: flex;
    gap: 8px;
    overflow-x: auto;
    box-shadow: var(--shadow-sm);
    scrollbar-width: none;
}

.tabs::-webkit-scrollbar {
    display: none;
}

.tab {
    padding: 10px 20px;
    border: none;
    background: transparent;
    border-radius: 8px;
    font-family: 'Cairo', sans-serif;
    font-weight: 600;
    font-size: 13px;
    color: var(--text-gray);
    cursor: pointer;
    transition: all 0.3s;
    white-space: nowrap;
    flex-shrink: 0;
}

.tab:hover {
    background: rgba(253, 176, 34, 0.1);
    color: var(--primary-yellow);
}

.tab.active {
    background: var(--primary-yellow);
    color: var(--primary-dark);
    box-shadow: 0 2px 8px rgba(253, 176, 34, 0.3);
}

/* Tab Content */
.tab-content {
    background: var(--secondary-dark);
    border-radius: var(--border-radius);
    padding: 20px;
    box-shadow: var(--shadow-sm);
    min-height: 300px;
}

.tab-panel {
    display: none;
}

.tab-panel.active {
    display: block;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 12px;
}

.section-header h2 {
    font-size: 18px;
    color: var(--text-light);
    font-weight: 600;
}

/* Appointments List */
.appointments-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.appointment-card {
    background: var(--primary-dark);
    border: 1.5px solid rgba(253, 176, 34, 0.2);
    border-radius: 12px;
    padding: 16px;
    transition: all 0.3s;
}

.appointment-card:hover {
    border-color: var(--primary-yellow);
    box-shadow: 0 4px 16px rgba(253, 176, 34, 0.2);
    transform: translateY(-2px);
}

.appointment-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
    gap: 10px;
}

.appointment-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-light);
    flex: 1;
}

.appointment-status {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    flex-shrink: 0;
}

.status-confirmed {
    background: rgba(76, 175, 80, 0.2);
    color: #4CAF50;
}

.status-pending {
    background: rgba(253, 176, 34, 0.2);
    color: var(--primary-yellow);
}

.status-completed {
    background: rgba(33, 150, 243, 0.2);
    color: #2196F3;
}

.status-cancelled {
    background: rgba(244, 67, 54, 0.2);
    color: #F44336;
}

.appointment-details {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.detail-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-gray);
    font-size: 13px;
}

.detail-icon {
    font-size: 16px;
    opacity: 0.8;
}

.appointment-actions {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid rgba(253, 176, 34, 0.1);
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.btn-cancel {
    padding: 8px 16px;
    background: transparent;
    color: #F44336;
    border: 1.5px solid #F44336;
    border-radius: 8px;
    font-family: 'Cairo', sans-serif;
    font-weight: 600;
    font-size: 12px;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-cancel:hover {
    background: rgba(244, 67, 54, 0.1);
}

.btn-rate {
    padding: 8px 16px;
    background: var(--primary-yellow);
    color: var(--primary-dark);
    border: none;
    border-radius: 8px;
    font-family: 'Cairo', sans-serif;
    font-weight: 600;
    font-size: 12px;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-rate:hover {
    background: #FFC745;
    transform: translateY(-1px);
}

/* Invoices */
.invoices-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
}

.invoice-card {
    background: var(--primary-dark);
    border: 1.5px solid rgba(253, 176, 34, 0.2);
    border-radius: 12px;
    padding: 16px;
    transition: all 0.3s;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.invoice-card:hover {
    border-color: var(--primary-yellow);
    box-shadow: 0 4px 16px rgba(253, 176, 34, 0.2);
}

.invoice-number {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-light);
    margin-bottom: 4px;
}

.invoice-date {
    color: var(--text-gray);
    font-size: 11px;
    margin-bottom: 8px;
}

.invoice-amount {
    font-size: 18px;
    font-weight: 700;
    color: var(--primary-yellow);
}

.invoice-status {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
}

.status-paid {
    background: rgba(76, 175, 80, 0.2);
    color: #4CAF50;
}

.status-pending-payment {
    background: rgba(253, 176, 34, 0.2);
    color: var(--primary-yellow);
}

/* Rewards */
.rewards-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.rewards-info {
    width: 100%;
}

.rewards-card {
    background: var(--primary-yellow);
    border-radius: var(--border-radius);
    padding: 24px;
    color: var(--primary-dark);
    text-align: center;
}

.rewards-card.large {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
}

.rewards-icon {
    font-size: 48px;
}

.rewards-card h3 {
    font-size: 16px;
    margin-bottom: 8px;
    font-weight: 600;
}

.rewards-points {
    font-size: 36px;
    font-weight: 700;
    line-height: 1;
}

.rewards-card p {
    font-size: 14px;
    margin: 8px 0 16px;
    opacity: 0.8;
}

.rewards-card .btn-primary {
    background: var(--primary-dark);
    color: var(--primary-yellow);
}

.rewards-card .btn-primary:hover {
    background: #0F0F1E;
}

.rewards-history {
    background: var(--primary-dark);
    padding: 20px;
    border-radius: var(--border-radius);
}

.rewards-history h3 {
    font-size: 16px;
    color: var(--text-light);
    margin-bottom: 16px;
    font-weight: 600;
}

.points-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.points-item {
    background: var(--secondary-dark);
    border-radius: 8px;
    padding: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.points-earned {
    color: #4CAF50;
    font-weight: 600;
    font-size: 14px;
}

.points-spent {
    color: #F44336;
    font-weight: 600;
    font-size: 14px;
}

/* Settings Form */
.settings-form {
    max-width: 100%;
}

.form-group {
    margin-bottom: 16px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--text-light);
    font-weight: 500;
    font-size: 13px;
}

.form-group input[type="text"],
.form-group input[type="tel"],
.form-group input[type="email"],
.form-group input[type="date"],
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 12px 16px;
    background: var(--primary-dark);
    border: 1.5px solid rgba(253, 176, 34, 0.2);
    border-radius: 12px;
    font-family: 'Cairo', sans-serif;
    font-size: 14px;
    color: var(--text-light);
    transition: all 0.3s;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-yellow);
    background: var(--secondary-dark);
}

.form-group input[type="checkbox"] {
    margin-left: 10px;
    accent-color: var(--primary-yellow);
}

.form-group textarea {
    resize: vertical;
    min-height: 80px;
}

/* Loading & Empty States */
.loading {
    text-align: center;
    padding: 32px;
    color: var(--text-gray);
    font-size: 14px;
}

.empty-state {
    text-align: center;
    padding: 32px;
    color: var(--text-gray);
    font-size: 13px;
    line-height: 1.6;
}

/* Notification */
.notification {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%) translateY(-100px);
    background: var(--secondary-dark);
    color: var(--text-light);
    padding: 16px 24px;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    z-index: 1000;
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    border: 1.5px solid transparent;
    font-size: 14px;
    font-weight: 500;
}

.notification.show {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
}

.notification.success {
    border-color: #4CAF50;
    background: linear-gradient(135deg, rgba(76, 175, 80, 0.1), var(--secondary-dark));
}

.notification.error {
    border-color: #F44336;
    background: linear-gradient(135deg, rgba(244, 67, 54, 0.1), var(--secondary-dark));
}

/* Booking Modal */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(4px);
    z-index: 2000;
    animation: fadeIn 0.3s ease;
    overflow-y: auto;
    padding: 16px;
}

.modal.show {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 40px;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content {
    background: var(--secondary-dark);
    border-radius: var(--border-radius);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    border: 1.5px solid rgba(253, 176, 34, 0.2);
    width: 100%;
    max-width: 480px;
    max-height: 85vh;
    overflow-y: auto;
    animation: slideUp 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.modal-content::-webkit-scrollbar {
    width: 6px;
}

.modal-content::-webkit-scrollbar-track {
    background: var(--primary-dark);
}

.modal-content::-webkit-scrollbar-thumb {
    background: var(--primary-yellow);
    border-radius: 3px;
}

@keyframes slideUp {
    from {
        transform: translateY(60px) scale(0.95);
        opacity: 0;
    }
    to {
        transform: translateY(0) scale(1);
        opacity: 1;
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1.5px solid rgba(253, 176, 34, 0.1);
}

.modal-header h2 {
    font-size: 18px;
    color: var(--text-light);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
}

.close-btn {
    background: rgba(253, 176, 34, 0.1);
    border: none;
    font-size: 24px;
    color: var(--text-gray);
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
}

.close-btn:hover {
    background: var(--primary-yellow);
    color: var(--primary-dark);
    transform: rotate(90deg);
}

.modal-body {
    padding: 20px;
}

.modal-body .form-group {
    margin-bottom: 16px;
}

.modal-body .form-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--text-light);
    font-weight: 500;
    font-size: 13px;
}

.form-group select,
.form-group input,
.form-group textarea {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #e5e7eb;
    border-radius: 10px;
    font-family: 'Cairo', sans-serif;
    font-size: 16px;
    transition: border-color 0.3s;
}

.form-group select:focus,
.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: #6366f1;
}

.service-info {
    background: rgba(253, 176, 34, 0.1);
    border: 1.5px solid var(--primary-yellow);
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 16px;
}

.info-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    font-size: 13px;
}

.info-row:last-child {
    margin-bottom: 0;
}

.info-row span {
    color: var(--text-gray);
}

.info-row strong {
    color: var(--primary-yellow);
    font-weight: 600;
}

.time-slots {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
    gap: 8px;
    max-height: 250px;
    overflow-y: auto;
    padding: 4px;
}

.time-slots::-webkit-scrollbar {
    width: 4px;
}

.time-slots::-webkit-scrollbar-track {
    background: var(--primary-dark);
}

.time-slots::-webkit-scrollbar-thumb {
    background: var(--primary-yellow);
    border-radius: 2px;
}

.time-slot {
    padding: 12px 8px;
    border: 1.5px solid rgba(253, 176, 34, 0.3);
    border-radius: 10px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s;
    background: var(--primary-dark);
    font-weight: 600;
    font-size: 13px;
    color: var(--text-light);
}

.time-slot:hover:not(.unavailable) {
    border-color: var(--primary-yellow);
    background: rgba(253, 176, 34, 0.1);
    transform: translateY(-2px);
}

.time-slot.selected {
    background: var(--primary-yellow);
    color: var(--primary-dark);
    border-color: var(--primary-yellow);
    box-shadow: 0 4px 12px rgba(253, 176, 34, 0.3);
}

.time-slot.unavailable {
    background: transparent;
    color: var(--text-gray);
    border-color: rgba(160, 160, 160, 0.2);
    cursor: not-allowed;
    opacity: 0.4;
}

.time-slot.unavailable:hover {
    transform: none;
}

.empty-state {
    text-align: center;
    color: #9ca3af;
    padding: 20px;
    font-size: 14px;
}

.modal-footer {
    display: flex;
    gap: 12px;
    padding: 20px;
    border-top: 1.5px solid rgba(253, 176, 34, 0.1);
}

.modal-footer .btn-secondary {
    flex: 1;
}

.modal-footer .btn-primary {
    flex: 2;
}

.modal-footer button {
    padding: 12px 30px;
    border-radius: 10px;
    font-family: 'Cairo', sans-serif;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-secondary {
    background: #f3f4f6;
    color: #6b7280;
    border: 2px solid #e5e7eb;
}

.btn-secondary:hover {
    background: #e5e7eb;
}

.btn-primary {
    background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
    color: white;
    border: none;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
}

.btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

/* Responsive */
@media (max-width: 768px) {
    .profile-header {
        flex-direction: column;
        text-align: center;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .tabs {
        overflow-x: auto;
        flex-wrap: nowrap;
    }

    .appointment-details {
        grid-template-columns: 1fr;
    }
}
