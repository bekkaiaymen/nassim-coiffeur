{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/home", "destination": "/public/landing.html" },
    { "source": "/nassim", "destination": "/public/nassim/index.html" },
    { "source": "/nassim-owner", "destination": "/public/nassim-owner/index.html" },
    { "source": "/nassim/(.*)", "destination": "/public/nassim/$1" },
    { "source": "/nassim-owner/(.*)", "destination": "/public/nassim-owner/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
