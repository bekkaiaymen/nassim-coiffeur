# ===========================
# SmartBiz SaaS - Environment Variables
# ===========================
# انسخ هذا الملف إلى .env وعدّل القيم

# ----- Server Configuration -----
NODE_ENV=development
PORT=3000

# ----- MongoDB Database -----
# للتشغيل المحلي: استخدم MongoDB محلي أو MongoDB Atlas
MONGODB_URI=mongodb://localhost:27017/smartbiz
# أو استخدم MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smartbiz?retryWrites=true&w=majority

# ----- JWT Authentication -----
# اصنع JWT Secret قوي (32+ حرف عشوائي)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d

# ----- Stripe Payment (اختياري للتجربة المحلية) -----
# يمكنك تركها فارغة للتجربة بدون دفع
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ----- Frontend URL -----
FRONTEND_URL=http://localhost:3000

# ----- Email (اختياري) -----
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ----- OpenAI (للمساعد الذكي - اختياري) -----
OPENAI_API_KEY=

# ----- Cloudinary (for persistent image storage on production) -----
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
